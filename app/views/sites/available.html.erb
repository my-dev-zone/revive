<div class="main_page_container">
	
	<div class="container-fluid header_title_container">
		<div class="row">
			<div class="col-xs-12">
				<div class="header_title_content">
					<!-- TABS -->
					
						<div class="tabbable-panel">
						<div class="tabbable-line">
							<ul class="nav nav-tabs ">
			
								<li>
									<%= link_to crawl_path_path(@crawl.id) do %>
									    <i class="glyphicon glyphicon-stats">
											<span class="glyph_text">Dashboard</span>
										</i>
									<% end %>
								</li>
			
								<li>
									<%= link_to broken_path(@crawl.id) do %>
									    <i class="glyphicon glyphicon-ban-circle">
											<span class="glyph_text">Broken</span>
										</i>
									<% end %>
								</li>
								
								<li class="active">
									<%= link_to available_path(@crawl.id) do %>
									    <i class="glyphicon glyphicon-ok">
											<span class="glyph_text">Available</span>
										</i>
									<% end %>
								</li>
			
							</ul>
						</div>
					</div>
					
					<!-- TABS -->
				</div>
			</div>
		</div>
	</div>

	<div class="container-fluid container_section">
	
		<div class="row">
		
			<div class="col-xs-12">
			
				<div class="row">
					
					<div class="panel panel-default">
						<div class="panel-heading panel_pink_heading panel_glyph_container">
							
							<div class="header_glyph">
								<span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
							</div>
							<div class="header_text">
								<p>Found Avalible Domains</p>
							</div>
							
						</div>
						<div class="panel-body">
							
							<table class="table table-hover table-striped">
								
								<thead>
									<tr>
										<!-- <th></th> -->
										<th>DOMAIN</th>
										<th>DA</th>
										<th>PA</th>
										<th>TF</th>
										<th>CF</th>
										<th>TF/CF</th>
										<th>RD</th>
										<th>BL</th>
										<th>FOUND ON</th>
									</tr>
								</thead>
								
								<tbody>
									
									<% if @processing %>
										
										<% @pages.each do |i| %>
											<tr>
												<!-- <td>
													<span class="glyphicon glyphicon-trash glyph_pink" aria-hidden="true"></span>
													<span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
												</td> -->
												<td><%= i.url %></td>
												<td>-</td>
												<td>-</td>
												<td>-</td>
												<td>-</td>
												<td>-</td>
												<td>-</td>
												<td>-</td>
												<td><%= i.found_on %></td>
											</tr>
										<% end %>
										
									<% else %>
									
										<% @pages.each do |i| %>
											<tr>
												<!-- <td>
													<span class="glyphicon glyphicon-trash glyph_pink" aria-hidden="true"></span>
													<span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
												</td> -->
												<td>www.<%= i.simple_url %></td>
												<td><%= number_with_precision(i.da, precision: 0) %></td>
												<td><%= number_with_precision(i.pa, precision: 0) %></td>
												<td><%= i.trustflow %></td>
												<td><%= i.citationflow %></td>
												<td><%= number_with_precision(i.trustflow.to_f/i.citationflow.to_f) %></td>
												<td><%= i.refdomains %></td>
												<td><%= i.backlinks %></td>
												<td><%= i.found_on %></td>
											</tr>
										<% end %>
									
									<% end %>
									
									
								</tbody>
								
							</table>
							
							<div class="will_paginate_container text-center">
								<%= will_paginate @pages, renderer: BootstrapPagination::Rails %>
							</div>
							
						</div>
					</div>
					
				</div>
			
			</div>
		
		</div>
	
	</div>

</div>