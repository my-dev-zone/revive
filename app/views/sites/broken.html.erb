<div class="main_page_container">
	
	<div class="container-fluid header_title_container">
		<div class="row">
			<div class="col-xs-12">
				<div class="header_title_content">
					<!-- TABS -->
					
						<div class="tabbable-panel">
						<div class="tabbable-line">
							<ul class="nav nav-tabs ">
			
								<li>
									<%= link_to crawl_path_path(@crawl.id, 'processor_name' => @project.processor_name) do %>
									    <i class="glyphicon glyphicon-stats">
											<span class="glyph_text">Dashboard</span>
										</i>
									<% end %>
								</li>
			
								<li class="active">
									<%= link_to broken_path(@crawl.id, 'processor_name' => @project.processor_name) do %>
									    <i class="glyphicon glyphicon-ban-circle">
											<span class="glyph_text">Broken</span>
										</i>
									<% end %>
								</li>
								
								<li >
									<%= link_to available_path(@crawl.id, 'processor_name' => @project.processor_name) do %>
									    <i class="glyphicon glyphicon-ok">
											<span class="glyph_text">Available</span>
										</i>
									<% end %>
								</li>
								
								<li>
									<%= link_to bookmarked_sites_path(@crawl.id, 'processor_name' => @project.processor_name) do %>
									    <i class="glyphicon glyphicon-bookmark">
											<span class="glyph_text">Bookmarked</span>
										</i>
									<% end %>
								</li>
								
								<div class="download_csv_btn pull-right">
									<%= link_to 'Download', broken_path(@crawl.id, format: 'csv'), class: 'btn btn-success' %>
								</div>
			
							</ul>
						</div>
					</div>
					
					<!-- TABS -->
				</div>
			</div>
		</div>
	</div>

	<div class="container-fluid container_section">
	
		<div class="row">
		
			<div class="col-xs-12">
			
				<div class="row">
					
					<div class="panel panel-default">
						<div class="panel-heading panel_pink_heading panel_glyph_container">
							<div class="header_glyph">
								<span class="glyphicon glyphicon-ban-circle" aria-hidden="true"></span>
							</div>
							<div class="header_text">
								<p>Found Broken Domains</p>
							</div>
						</div>
						<div class="panel-body">
							
							<table class="table table-hover table-striped">
								
								<thead>
									<tr>
										<!-- <th></th> -->
										<th>DOMAIN</th>
										<th>FOUND ON</th>
										<!-- <th>TF</th>
										<th>D/A</th>
										<th>L</th>
										<th>D</th> -->
									</tr>
								</thead>
								
								<tbody>
									
									<% @pages.each do |i| %>
										<tr>
											<!-- <td>
												<span class="glyphicon glyphicon-trash glyph_pink" aria-hidden="true"></span>
												<span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
											</td> -->
											<td><%= i.url %></td>
											<td><%= i.found_on %></td>
											<!-- <td>-</td>
											<td>-</td>
											<td>-</td>
											<td>-</td> -->
										</tr>
									<% end %>
									
									
								</tbody>
								
							</table>
							
							<div class="will_paginate_container text-center">
								<%= will_paginate @pages, renderer: BootstrapPagination::Rails %>
							</div>
							
						</div>
					</div>
					
				</div>
			
			</div>
		
		</div>
	
	</div>

</div>