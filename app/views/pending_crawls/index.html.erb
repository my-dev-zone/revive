<div class="main_page_container">

	<div class="container-fluid header_title_container">
		<div class="row">
			<div class="col-xs-12">
				<div class="header_title_content">
					<div class='top_nav_title_container'>
						<div class="header_glyph">
							<span class="glyphicon glyphicon-folder-close" aria-hidden="true"></span>
						</div>
						<div class="header_text">
							<p>Projects</p>
						</div>
					</div>
					<div class="blue-nav">
            <ul class="nav">
              <li>
                <%= link_to 'Projects', crawls_path %>
              </li>

              <li class="active">
                <%= link_to 'Pending', pending_crawls_path %>
                <div class="arrow-down"></div>
              </li>

              <li>
                <%= link_to 'Running', running_crawls_path %>
              </li>

              <li>
                <%= link_to 'Stopped', '#' %>
              </li>

              <li>
                <%= link_to 'Finished', finished_crawls_path %>
              </li>
            </ul>
					</div>
				  <%= link_to 'Help & Support', 'http://source-wave.com/support', class: 'pull-right help-support' %>
          <div class="header_button pull-right">
            <p><%= link_to "Create New", new_project_path, class: 'btn btn-green btn-sm', 'data-no-turbolink': true %></p>
          </div>
				</div>
			</div>
		</div>
	</div>

	<div class="container-fluid container_section pending-crawls-list-container">

		<div class="row">
			<div class='col-xs-12'>
        <%= render 'minutes/used_minutes' %>
        <div class="page-header">
          <h3>Click and drag to sort the order</h3>
        </div>
        <ul class="pending-crawls-container" data-update-url="<%= sort_pending_crawls_url %>">
					<% @crawls.each do |c| %>

						<% if c.crawl %>
							<%= content_tag_for :li, c do %>
                <div class='pending-crawl'>
                  <div class='row'>
                    <div class='handle_div'>
                      <span class="handle glyphicon glyphicon-align-justify" aria-hidden="true"></span>
                    </div>
                    <div class='name crawl-name col-xs-3'>
                      <%= c.crawl.name %>
                    </div>
                    <div class='name col-xs-3'>
                      Pages Per Site: <strong><%= c.crawl.maxpages %></strong>
                    </div>
                    <div class='name col-xs-3'>
                      Type: <strong><%= c.crawl.crawl_type %></strong>
                    </div>
                    <%= link_to "DELETE", crawl_path(c.id, 'processor_name' => c.processor_name), class: 'btn btn-red-hollow btn-sm pull-right', method: :delete, data: { confirm: "Are you sure?" } %>
                    <%= link_to "START", start_crawl_path('processor_name' => c.processor_name), class: 'btn btn-green btn-sm pull-right'%>
                  </div>
                </div>
							<% end %>
						<% end %>

					<% end %>
				</ul>

			</div>
		</div>
	</div>

</div>
