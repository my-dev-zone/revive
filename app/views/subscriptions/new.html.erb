<div class="home_main_container">
	
	<div class="home_section_container checkout_header">
	
		<div class="home_middle_container">
			
			<div class="checkout_header_logo pull-left">
				<%= image_tag 'revive_big_logo.jpg' %>
			</div>
			
			<div class="checkout_header_phone pull-right">
				<p>Need Support? support@sourcerevive.net</p>
			</div>
			
		</div>
	
	</div>

  <%= render 'layouts/flash_errors' %>

  <div class="home_section_container checkout_main_container">
    <div class="home_middle_container">
      <div class='row'>

        <div class="col-xs-8">

          <%= form_tag Subscription.new, id: 'new_subscription' do %>
            <%= hidden_field_tag :plan_id, params[:plan_id]%>
            <div class="form_section">
              <div class='section_title_container'>
                <div class="step_circle">1</div>
                <div class="step_title_text">Contact Information</div>
              </div>

              <div class='row'>

                <div class='col-xs-6'>
                  <div class="form_field_section">
                    <div class="form_label">
                      <%= label_tag :first_name, "First Name" %>
                    </div>
                    <div class="form_field">
                      <%= text_field_tag 'user[first_name]', nil%>
                    </div>
                  </div>
                </div>

                <div class='col-xs-6'>
                  <div class="form_field_section">
                    <div class="form_label">
                      <%= label_tag :user_last_name, "Last Name" %>
                    </div>
                    <div class="form_field">
                      <%= text_field_tag 'user[last_name]', nil %>
                    </div>
                  </div>
                </div>

              </div>

              <div class='row'>

                <div class='col-xs-6'>
                  <div class="form_field_section">
                    <div class="form_label">
                      <%= label_tag :email, "Email" %>
                    </div>
                    <div class="form_field">
                      <%= text_field_tag 'user[email]', current_user ? current_user.email : 'user@example.com', disabled: current_user ? true : false %>
                    </div>
                  </div>
                </div>

                <div class='col-xs-6'>
                  <div class="form_field_section">
                    <div class="form_label">
                      <%= label_tag :user_phone, "Phone" %>
                    </div>
                    <div class="form_field">
                      <%= text_field_tag 'user[phone]'%>
                    </div>
                  </div>
                </div>

              </div>
            </div>

            <div class="form_section">
              <div class='section_title_container'>
                <div class="step_circle">2</div>
                <div class="step_title_text">Billing Details</div>
              </div>

              <div class='row'>

                <div class='col-xs-12'>
                  <div class="form_field_section">
                    <div class="form_label">
                      <%= label_tag :user_address_1, "Address 1" %>
                    </div>
                    <div class="form_field">
                      <%= text_field_tag 'user[address_1]', nil %>
                    </div>
                  </div>
                </div>

              </div>

              <div class='row'>

                <div class='col-xs-12'>
                  <div class="form_field_section">
                    <div class="form_label">
                      <%= label_tag :user_address_2, "Address 2" %>
                    </div>
                    <div class="form_field">
                      <%= text_field_tag 'user[address_2]', nil %>
                    </div>
                  </div>
                </div>

              </div>

              <div class='row'>

                <div class='col-xs-4'>
                  <div class="form_field_section">
                    <div class="form_label">
                      <%= label_tag :user_city, "City" %>
                    </div>
                    <div class="form_field">
                      <%= text_field_tag 'user[city]', nil %>
                    </div>
                  </div>
                </div>

                <div class='col-xs-4'>
                  <div class="form_field_section">
                    <div class="form_label">
                      <%= label_tag :user_state, "State" %>
                    </div>
                    <div class="form_field">
                      <%= text_field_tag 'user[state]', nil %>
                    </div>
                  </div>
                </div>

                <div class='col-xs-4'>
                  <div class="form_field_section">
                    <div class="form_label">
                      <%= label_tag :user_zip, "Zip Code" %>
                    </div>
                    <div class="form_field">
                      <%= text_field_tag 'user[zip]', nil %>
                    </div>
                  </div>
                </div>

              </div>

              <div class='row'>

                <div class='col-xs-12'>
                  <div class="form_field_section">
                    <div class="form_label">
                      <%= label_tag :country, "Country" %>
                    </div>
                    <div class="form_field">
                      <%= text_field_tag 'user[country]', nil%>
                    </div>
                  </div>
                </div>

              </div>

            </div>

            <div class="form_section">

              <div class='section_title_container'>
                <div class="step_circle">3</div>
                <div class="step_title_text">Payment Information</div>
              </div>
              <div class="row">
                <div class="col-xs-12">
                  <div id="stripe_error">
                    <noscript>
                      JavaScript is not enabled and is required for this form. First enable it in your web browser settings.
                    </noscript>
                  </div>
                </div>
              </div>
              <section class="card">
                <div class='row'>

                  <div class='col-xs-12'>
                    <div class="payment-errors"></div>

                    <div class="form_field_section">
                      <div class="form_label">
                        <%= label_tag 'card[number]', 'Credit Card Number' %>
                      </div>
                      <div class="form_field">
                        <%= text_field_tag 'card[number]', nil, data: {stripe: 'number'}, maxlength: 16, minlength: 16%>
                      </div>
                    </div>
                  </div>

                </div>

                <div class='row'>

                  <div class='col-xs-4'>
                    <div class="form_field_section">
                      <div class="form_label">
                        <%= label_tag 'card[cvc]', 'CVC / CVV' %>
                      </div>
                      <div class="form_field">
                        <%= text_field_tag 'card[cvc]', nil, data: {stripe: 'cvc'}, maxlength: 3, minlength: 3 %>
                      </div>
                    </div>
                  </div>

                  <div class='col-xs-4'>
                    <div class="form_field_section">
                      <div class="form_label">
                        <%= label_tag 'card[exp]', "Exp. Month" %>
                      </div>
                      <div class="form_field">
                        <%= text_field_tag 'card[month]', nil, data: {stripe: 'exp-month'}, maxlength: 2, minlength: 2 %>
                      </div>
                    </div>
                  </div>

                  <div class='col-xs-4'>
                    <div class="form_field_section">
                      <div class="form_label">
                        <%= label_tag :card_year, "Exp. Year" %>
                      </div>
                      <div class="form_field">
                        <%= text_field_tag 'card[year]', nil, data: {stripe: 'exp-year'}, maxlength: 4, minlength: 2 %>
                      </div>
                    </div>
                  </div>

                </div>
              </section>


              <div class="line_break"></div>

              <div class="panel panel-default order_total_container">
                <div class="panel-heading">
                  <div class="row">
                    <div class="pull-left order_toatal_text">Your Order Total:</div>
                    <div class="pull-right order_toatal_price">$197.00</div>
                  </div>
                </div>
              </div>

              <div class="checkout_form_submit_btn">
                <%= submit_tag "Submit Order", id:'subscription-submit', class:'btn btn-success btn-lg btn-block checkout_form_submit_btn', data:{disable_with:'Working Magic..' }%>
              </div>

              <div class="row trust_logos">
                <div class="col-xs-6">
                  <div class="row">
                    <div class="col-xs-2">
                      <div class="trust_logo_headline_img">
                        <%= image_tag "http://www.leadpages.net/wp-content/themes/leadpages2014/images/new/homepage/30-badge.png" %>
                      </div>
                    </div>
                    <div class="col-xs-10">
                      <div class="trust_logo_headline pull-left">
                        <p>30 DAY MONEY-BACK GUARANTEE</p>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="col-xs-6">
                  <div class="row">
                    <div class="col-xs-5">
                      <div class="trust_logo_headline_img pull-right">
                        <%= image_tag "http://www.leadpages.net/wp-content/themes/leadpages2014/images/new/homepage/secure-lock.png" %>
                      </div>
                    </div>
                    <div class="col-xs-7">
                      <div class="trust_logo_headline pull-left">
                        <p>SECURE CHECKOUT</p>
                      </div>
                    </div>
                  </div>
                </div>

              </div>

            </div>


          <% end %>

        </div>

        <div class="col-xs-4">

          <div class='right_checkout_section'>
            <div class="page-header">
              <h1>What's Included</h1>
            </div>

            <ul class="nav nav-list whats_included_list">
              <li class="pull-left">
                <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                There is no limit to the amount of domains you can find with Source Revive
              </li>

              <li class="pull-left">
                <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                You are allowed an overkill of up to 10  active domain scan projects at a time
              </li>

              <li class="pull-left">
                <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                We handle all the expensive data processing and proxies from our cloud servers.
              </li>

              <li class="pull-left">
                <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                We continue to upgrade and improve this system and keep it pristine.
              </li>
            </ul>

            <hr class="colorgraph">
          </div>

          <div class='right_checkout_section'>
            <h1>100% Guarantee</h1>


            <div class="satisfaction_checkout_section">
              <%= image_tag 'https://www.leadpages.net/wp-content/themes/leadpages2014/images/new/homepage/30-day-badge.png' %>
            </div>

            <hr class="colorgraph">

          </div>

          <div class='right_checkout_section'>
            <h1>Privacy / Security</h1>
            <h4><small>We will not share or trade online information that you provide us (including e-mail addresses). All personal information you submit is encrypted and secure.</small></h4>

            <div class="row text-center">

              <div class="col-xs-6">
                <div class="satisfaction_checkout_section privacy_securty_section pull-left">
                  <%= image_tag 'https://www.safesitecertified.org/members/identity.html?seal=3&member=fa1a21df&location=Traffic_&_Conversion_Summit&size=3&seal_text=115&url=www.trafficandconversionsummit.com/order/recordings/' %>
                </div>
              </div>

              <div class="col-xs-6">
                <div class="satisfaction_checkout_section privacy_securty_section">
                  <%= image_tag 'https://www.safesitecertified.org/members/identity.html?seal=2&member=fa1a21df&location=Traffic_&_Conversion_Summit&size=3&seal_text=115&url=www.trafficandconversionsummit.com/order/recordings/' %>
                </div>
              </div>

            </div>

            <hr class="colorgraph">

          </div>

        </div>

      </div>
    </div>
  </div>

</div>
<script type="text/javascript">
  Stripe.setPublishableKey("<%= ENV['stripe_public_key']%>");
</script>