<div class="main_page_container">
	
	<div class="container-fluid header_title_container">
		<div class="row">
			<div class="col-xs-12">
				<div class="header_title_content">
						
					<!-- TABS -->
					
						<div class="tabbable-panel">
						<div class="tabbable-line">
							<ul class="nav nav-tabs ">
			
								<li class="active">
									<%= link_to crawl_path_path(@project.id) do %>
									    <i class="glyphicon glyphicon-stats">
											<span class="glyph_text">Dashboard</span>
										</i>
									<% end %>
								</li>
			
								<li >
									<%= link_to broken_path(@project.id) do %>
									    <i class="glyphicon glyphicon-ban-circle">
											<span class="glyph_text">Broken</span>
										</i>
									<% end %>
								</li>
								
								<li >
									<%= link_to available_path(@project.id) do %>
									    <i class="glyphicon glyphicon-ok">
											<span class="glyph_text">Available</span>
										</i>
									<% end %>
								</li>
								
								<li>
									<%= link_to bookmarked_sites_path(@project.id) do %>
									    <i class="glyphicon glyphicon-bookmark">
											<span class="glyph_text">Bookmarked</span>
										</i>
									<% end %>
								</li>
								
								<% if @project.status != 'finished' %>
									
									<div class="pull-right">
										<%= link_to 'Stop Crawl', stop_crawl_path(@project.id), class: 'btn btn-danger' %>
									</div>
									
								<% end %>
			
							</ul>
							

							
						</div>
						
					</div>
					
					<!-- TABS -->

						
				</div>
			</div>
		</div>
	</div>
	
	<div class="container-fluid container_section">
		<div class="row">
			<div class="col-xs-12">
				<div class="row">
							
					<div class="col-xs-3 nopadding text-center">
					
						<div class="row">
							<div class="title_text">
								<p>URLS FOUND</p>
							</div>
						</div>
					
						<div class="row">
							<div class="stat_circle_container glyph_pink">
								<%= @urls_found.to_i %>
							</div>
						</div>
					
					</div>
		
					<div class="col-xs-3 nopadding text-center">
					
						<div class="row">
							<div class="title_text">
								<p>BROKEN DOMAINS</p>
							</div>
						</div>
					
						<div class="row">
							<div class="stat_circle_container glyph_blue">
								<%= @broken_domains.to_i %>
							</div>
						</div>
					
					</div>
		
					<div class="col-xs-3 nopadding text-center">
					
						<div class="row">
							<div class="title_text">
								<p>EXPIRED DOMAINS</p>
							</div>
						</div>
					
						<div class="row">
							<div class="stat_circle_container glyph_blue">
								<%= @expired_domains.to_i %>
							</div>
						</div>
					
					</div>
					
					<div class="col-xs-3 nopadding text-center">
					
						<div class="row">
							<div class="title_text">
								<p>STATUS</p>
							</div>
						</div>
					
						<div class="row">
							<div class="stat_circle_container glyph_pink">
								<%= @project.status.to_s %>
							</div>
						</div>
					
					</div>
		
				</div>
			</div>
		</div>
	</div>

	<div class="container-fluid container_section">
	
		<div class="row">
			
			<div class="col-xs-7">

				<div class="row">
					<div class="title_text">
						<p>PROJECT STATS</p>
					</div>
				</div>

				<div class="row">
					<%= high_chart("stats_chart", @stats_chart) %>
				</div>

			</div>
		
			<div class="col-xs-5">
			
				<div class="row">
					<!-- <div class="row">
						<div class="title_text">
							<p>TOP PRIMED DOMAINS</p>
						</div>
					</div> -->
					<!-- <div class="zero_top_domains text-center">0</div> -->
					<%= render 'top_domains' %>
				</div>
			
			</div>
		
		</div>
	
	</div>

	<%= render 'sites_table' %>
	
</div>