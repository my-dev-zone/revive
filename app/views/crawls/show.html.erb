<div class="main_page_container">
	
	<div class="container-fluid header_title_container">
		<div class="row">
			<div class="col-xs-12">
				<div class="header_title_content">
						
					<!-- TABS -->
					
						<div class="tabbable-panel">
						<div class="tabbable-line">
							<ul class="nav nav-tabs ">
			
								<li class="active">
									<%= link_to crawl_path_path(@project.id) do %>
									    <i class="glyphicon glyphicon-stats">
											<span class="glyph_text">Dashboard</span>
										</i>
									<% end %>
								</li>
			
								<li >
									<%= link_to broken_path(@project.id) do %>
									    <i class="glyphicon glyphicon-ban-circle">
											<span class="glyph_text">Broken</span>
										</i>
									<% end %>
								</li>
								
								<li >
									<%= link_to available_path(@project.id) do %>
									    <i class="glyphicon glyphicon-ok">
											<span class="glyph_text">Available</span>
										</i>
									<% end %>
								</li>
								
								<% if @total_running_jobs != 0 && @project.heroku_app.status != 'finished' %>
									
									<div class="pull-right">
										<%= link_to 'Stop Crawl', stop_crawl_path(@project.id), class: 'btn btn-danger' %>
									</div>
									
								<% end %>
			
							</ul>
							

							
						</div>
						
					</div>
					
					<!-- TABS -->

						
				</div>
			</div>
		</div>
	</div>
	
	<div class="container-fluid container_section">
		<div class="row">
			<div class="col-xs-12">
				<div class="row">
		
					<div class="col-xs-3 nopadding text-center">
					
						<div class="row">
							<div class="title_text">
								<p>URLS FOUND</p>
							</div>
						</div>
					
						<div class="row">
							<div class="stat_circle_container glyph_pink">
								<%= @project.links.map(&:links).flatten.count %>
							</div>
						</div>
					
					</div>
		
					<div class="col-xs-3 nopadding text-center">
					
						<div class="row">
							<div class="title_text">
								<p>DOMAINS CRAWLED</p>
							</div>
						</div>
					
						<div class="row">
							<div class="stat_circle_container glyph_blue">
								<%= @project.pages.uniq.count %>
							</div>
						</div>
					
					</div>
		
					<div class="col-xs-3 nopadding text-center">
					
						<div class="row">
							<div class="title_text">
								<p>EXPIRED DOMAINS FOUND</p>
							</div>
						</div>
					
						<div class="row">
							<div class="stat_circle_container glyph_blue">
								<%= @project.pages.where(internal: false, status_code: '0').uniq.count %>
							</div>
						</div>
					
					</div>
					
					<div class="col-xs-3 nopadding text-center">
					
						<div class="row">
							<div class="title_text">
								<p>STATUS</p>
							</div>
						</div>
					
						<div class="row">
							<div class="stat_circle_container glyph_pink">
								<% if @total_running_jobs == 0 %>
									<p>DONE</p>
								<% else %>
									<p>RUNNING</p>
								<% end %>
							</div>
						</div>
					
					</div>
		
				</div>
			</div>
		</div>
	</div>

	<div class="container-fluid container_section">
	
		<div class="row">
			
			<div class="col-xs-7">

				<div class="row">
					<div class="title_text">
						<p>PROJECT STATS</p>
					</div>
				</div>

				<div class="row">
					<%= high_chart("stats_chart", @stats_chart) %>
				</div>

			</div>
		
			<div class="col-xs-5">
			
				<div class="row">
					<% if @total_running_jobs > 0 %>
						<div class="row">
							<div class="title_text">
								<p>TOP PRIMED DOMAINS</p>
							</div>
						</div>
						<div class="text-center crawling_gif"><%= image_tag 'preloader.gif' %></div>
					<% elsif @total_running_jobs == 0 && @top_domains.count == 0 %>
						<div class="row">
							<div class="title_text">
								<p>TOP PRIMED DOMAINS</p>
							</div>
						</div>
						<div class="zero_top_domains text-center">0</div>
					<% else %>
						<%= render 'top_domains' %>
					<% end %>
				</div>
			
			</div>
		
		</div>
	
	</div>

	<%= render 'sites_table' %>
	
</div>