<div class="main_page_container">
	
	<div class="container-fluid header_title_container">
		<div class="row">
			<div class="col-xs-12">
				<div class="header_title_content">
					<div class="header_glyph">
						<span class="glyphicon glyphicon-stats" aria-hidden="true"></span>
					</div>
					<div class="header_text">
						<p>Project Stats</p>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="container-fluid container_section">
	
		<div class="row">
			
			<div class="col-xs-7">

				<div class="row">
					<div class="title_text">
						<p>DOMAINS FOUND THIS WEEK</p>
					</div>
				</div>

				<div class="row">
					<%= high_chart("stats_chart", Crawl.stats) %>
				</div>

			</div>
		
			<div class="col-xs-5">
			
				<div class="row">
					<div class="title_number">
						<p>14</p>
					</div>
					<div class="title_text">
						<p>DOMAINS FOUND THIS WEEK</p>
					</div>
				</div>
			
				<div class="row">
				
				</div>
			
			</div>
		
		</div>
	
	</div>

	<div class="container-fluid container_section">
		<div class="row">
			<div class="col-xs-7">
				<div class="row">
		
					<div class="col-xs-4 nopadding text-center">
					
						<div class="row">
							<div class="title_text">
								<p>URLS</p>
							</div>
						</div>
					
						<div class="row">
							<div class="stat_circle_container glyph_pink">
								<%#= @project.statistics.get_statistics[:queue_counter] %>
							</div>
						</div>
					
					</div>
		
					<div class="col-xs-4 nopadding text-center">
					
						<div class="row">
							<div class="title_text">
								<p>DOMAINS SCRAPED</p>
							</div>
						</div>
					
						<div class="row">
							<div class="stat_circle_container glyph_blue">
								<%#= @project.statistics.get_statistics[:crawl_counter] %>
							</div>
						</div>
					
					</div>
		
					<div class="col-xs-4 nopadding text-center">
					
						<div class="row">
							<div class="title_text">
								<p>PRIME DOMAINS</p>
							</div>
						</div>
					
						<div class="row">
							<div class="stat_circle_container glyph_blue">
								87
							</div>
						</div>
					
					</div>
		
				</div>
			</div>
		</div>
	</div>
	
</div>