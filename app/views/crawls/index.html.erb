<div class="main_page_container">
	

	
	
	
	<div class="container-fluid header_title_container">
		<div class="row">
			<div class="col-xs-12">
				<div class="header_title_content">
					<!-- TABS -->
				
					<div class="tabbable-panel">
						<div class="tabbable-line">
							<ul class="nav nav-tabs ">
								<li class="active">
									<%= link_to crawls_path do %>
									    <i class="glyphicon glyphicon-folder-open">
											<span class="glyph_text">Projects</span>
										</i>
									<% end %>
								</li>
		
								<li>
									<%= link_to pending_crawls_path do %>
									    <i class="glyphicon glyphicon-time">
											<span class="glyph_text">Pending</span>
										</i>
									<% end %>
								</li>
							
								<li >
									<%= link_to running_crawls_path do %>
									    <i class="glyphicon glyphicon-refresh">
											<span class="glyph_text">Running</span>
										</i>
									<% end %>
								</li>
								
								<li >
									<%= link_to '#' do %>
									    <i class="glyphicon glyphicon-ban-circle">
											<span class="glyph_text">Stopped</span>
										</i>
									<% end %>
								</li>

								<li >
									<%= link_to finished_crawls_path do %>
									    <i class="glyphicon glyphicon-flag">
											<span class="glyph_text">Finished</span>
										</i>
									<% end %>
								</li>
								
								<div class="header_button pull-right">
									<p><%= link_to "CREATE NEW", new_project_path, class: 'btn btn-success btn-sm', 'data-no-turbolink': true %></p>
								</div>
							</ul>
						</div>
					</div>
				
					<!-- TABS -->

				</div>
			</div>
		</div>
	</div>
	
	

	<div class="container-fluid container_section">
	
		<%= render 'project_row' %>
	

		
		<div class="will_paginate_container text-center">
			<%= will_paginate @crawls, renderer: BootstrapPagination::Rails %>
		</div>
	
	</div>

</div>