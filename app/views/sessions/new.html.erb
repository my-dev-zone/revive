<div class="login_form_container">
	
	<h1>Log In</h1>
	
	<%= form_tag sessions_path do%>
		
		<div class="field_container">
			
			<div class="field_label">
				<%= label_tag :email %>
			</div>
			
			<div class="field">
				<%= text_field_tag :email, '', class: "form-control" %>
			</div>
			
		</div>

		<div class="field_container">
			
			<div class="field_label">
				<%= label_tag :password %>
			</div>
			
			<div class="field">
				<%= password_field_tag :password, '', class: "form-control" %>
			</div>
			
		</div>
		
		<div class="field_container text-center pink_form_submit_btn_container">
			
			<div class="field_label">
				<%= submit_tag "Login to Source Revive", class: 'btn pink_form_submit_btn' %>
			</div>
			
		</div>
		
		<span class="or-rule">
			<div class="or-rule-before"></div>
			or
			<div class="or-rule-after"></div>
		</span>
		
		<div class="actions pull-left">
			<%= link_to "Forgot Password", new_password_reset_path %>
		</div>

		<div class="actions pull-right">
			<%= link_to "Create an Account", signup_path %>
		</div>
		
	<% end %>
	
</div>